root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# JavaScript, TypeScript, JSON
[*.{ts,tsx,js,jsx,mjs,cjs,json}]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# Markdown
[*.md]
max_line_length = off
insert_final_newline = false
trim_trailing_whitespace = false