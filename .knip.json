{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "apps/extension": {
      "entry": ["src/entrypoints/background/index.ts", "src/entrypoints/content/index.ts", "wxt.config.ts"],
      "project": ["src/**/*.{js,ts,tsx,jsx}"],
      "ignoreDependencies": ["@wxt-dev/module-react"]
    },
    "packages/*": {
      "entry": ["src/index.{ts,tsx}"],
      "project": ["src/**/*.{js,ts,tsx,jsx}"]
    }
  },
  "ignoreDependencies": ["@commitlint/cli"]
}
